@page "/ViewEmployee"
@page "/ViewEmployee/{ID:int}"
@inherits EmployeeBase
@inject NavigationManager navMan;

<div>
    <main class="">
        <div class="row">
            <!-- This is the main page content -->
            <div class="col-8">
                <div class="col-8">
                    <a href="EmployeeDashboard" class="nav-link text-black link-dark">
                        <img src="iCONS/arrow_back_FILL0_wght400_GRAD0_opsz48.png" class="rounded-circle">
                    </a>
                    <h1>View Employee</h1>
                </div>

                <div class="row gutters-sm">

                    <!-- This is the Profile Settings -->
                    <div class="col-md-8 border-right">
                        <div class="p-3 py-5">
                            
                            @foreach (var employee in Employee)
                            {
                                if (employee.UserID == ID)
                                {
                                    <div class="row mt-3">
                                        <div class="col-md-12">
                                            <label class="labels">Name</label>
                                            <input disabled type="text" class="form-control" id="disabledTextInput" placeholder="@employee.FirstName" value="@employee.FirstName">
                                        </div>
                                        <br />
                                        <br />
                                        <br />
                                        <div class="col-md-12">
                                            <label class="labels">Last Name</label>
                                            <input disabled type="text" class="form-control" value="@employee.LastName" placeholder="@employee.LastName">
                                        </div>
                                        <br />
                                        <br />
                                        <br />
                                        <div class="col-md-12">
                                            <label class="labels">Username</label>
                                            <input disabled type="text" class="form-control" value="@employee.UserName" placeholder="@employee.UserName">
                                        </div>
                                        <br />
                                        <br />
                                        <br />
                                        <div class="col-md-12">
                                            <label class="labels">Role</label>
                                            <input disabled type="text" class="form-control" value="@employee.Role" placeholder="@employee.Role">
                                        </div>
                                        <br />
                                        <br />
                                        <br />
                                        <div class="col-md-12">
                                            <label class="labels">Mobile Number</label>
                                            <input disabled type="text" class="form-control" placeholder="@employee.PhoneNum" value="@employee.PhoneNum">
                                        </div>
                                        <br />
                                        <br />
                                        <br />
                                        <div class="col-md-12">
                                            <label class="labels">Email Address</label>
                                            <input disabled type="email" class="form-control" placeholder="@employee.Email" value="@employee.Email">
                                        </div>
                                        <br />
                                        <br />
                                        <br />
                                    </div>
                                }
                            }
                        </div>
                    </div>


                    <!-- This is the Profile Card on the right -->
                    <div class="col-md-4 mb-3">
                        <div class="card shadow">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center text-center">
                                    <img src="icons/person_FILL0_wght400_GRAD0_opsz48.png" alt="Admin" class="rounded-circle shadow" width="150">
                                    <div class="mt-3">
                                        <h4>John Doe</h4>
                                        <p class="text-secondary mb-1">Full Stack Developer</p>
                                        <p class="text-muted font-size-sm">Bay Area, San Francisco, CA</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    </div>

                </div>
            </div>
        </div>

    </main>
</div>

