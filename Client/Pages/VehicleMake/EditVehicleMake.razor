@page "/EditVehicleModelType"

@inherits VehicleMakeBase;

<h3></h3>

<div class="container">
    <main>
        <div class="row">
            <div class="col-8">
                <div class="col-8">
                    <a href="VehicleModelTypeDashboard" class="nav-link text-black link-dark">
                        <img src="iCONS/arrow_back_FILL0_wght400_GRAD0_opsz48.png" class="rounded-circle">
                    </a>

                    <h1>Edit Vehicle Make</h1>

                    <div class="container">
                        <div class="card shadow">
                            <div class="card-body">
                                <form>
                                    @foreach (var vehicleModelType in VehicleModelTypes)
                                    {
                                        if (vehicleModelType.VehicleMakeID == ID)
                                        {
                                            <div class="form-group col-md-8">
                                                <label for="inputTitle"> @vehicleModelType.VehicleMakeTitle </label>
                                                <input type="text" class="form-control" id="floatingInput" placeholder="Vehicle Type Title" @bind-value="updateVehicleModelTypes.VehicleMakeTitle"></input>
                                            </div>
                                            <br />
                                        }
                                    }
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

