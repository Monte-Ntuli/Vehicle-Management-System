@page "/ViewVehicleType"
@page "/ViewVehicleType/{id:int}"
@inherits VehicleTypeBase

<div class="container">
    <main>
        <div class="row">
            <div class="col-8">
                <div class="col-8">
                    <a href="VehicleTypesDashboard" class="nav-link text-black link-dark">
                        <img src="iCONS/arrow_back_FILL0_wght400_GRAD0_opsz48.png" class="rounded-circle">
                    </a>

                    <h1>View Stats</h1>

                    <div class="container">
                        <div class="card shadow">
                            <div class="card-body">
                                <form>
                                    @foreach ( var vehicleType in VehicleTypes)
                                    {
                                        if (vehicleType.VehicleTypeID == ID)
                                        {
                                            <div class="form-group col-md-8">
                                            <label for="inputTitle"> Vehicle Type Title : </label>
                                                <label for="inputTitle"> @vehicleType.VehicleTypeTitle </label>
                                            </div>
                                            <br />
                                        }
                                    }
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

